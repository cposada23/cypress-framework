{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["cypress", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["cypress/pages/*"],
      "@utils/*": ["cypress/utils/*"],
      "@fixtures/*": ["cypress/fixtures/*"],
      "@support/*": ["cypress/support/*"],
      "@config/*": ["cypress/config/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "cypress/**/*.ts",
    "cypress.config.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

